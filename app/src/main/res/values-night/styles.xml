<resources>

    <style name="Theme.DayNight.Base" parent="Theme.MaterialComponents"/>

    <style name="Theme.MyApp.Main" parent="Theme.DayNight.Base">
        <item name="android:windowBackground">@color/night_background_dark</item>
        <item name="colorPrimary">@color/night_primary</item>
        <item name="colorPrimaryVariant">@color/night_background_light</item>
        <item name="colorPrimaryDark">@color/night_primary_dark</item>
        <item name="colorSecondary">@color/night_accent</item>
        <item name="colorSecondaryVariant">@color/night_accent_light</item>
    </style>

    <style name="Theme.MyApp.Main.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dialogFragmentStyle" parent="android:Theme.Material.DialogWhenLarge">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
    </style>

    <style name="MaterialTextInputView" parent="Widget.Design.TextInputLayout">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="boxBackgroundColor">@color/primary_light</item>
        <item name="errorEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
    </style>

</resources>
