<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>

        <variable
            name="character"
            type="com.example.testapp.db.entity.Character"
            />

        <variable
            name="onClickPlus"
            type="com.example.testapp.ui.character.edit.StatCounterPlusButtonListener" />

        <variable
            name="onClickMinus"
            type="com.example.testapp.ui.character.edit.StatCounterMinusButtonListener" />

    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.character.edit.CharacterEditFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/character_edit_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/button_accept"
                    android:text="@string/accept" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/button_cancel"
                    android:text="@string/cancel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={character.name}"
                        android:hint="@string/name"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_player_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={character.playerName}"
                        android:hint="@string/player_name"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned"
                        android:text="@={character.age}"
                        android:hint="@string/age"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_world"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={character.world}"
                        android:hint="@string/world"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={character.state}"
                        android:hint="@string/state"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_eye"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={character.eyes}"
                        android:hint="@string/eyes"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_hairs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={character.hairs}"
                        android:hint="@string/hairs"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_skin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={character.skin}"
                        android:hint="@string/skin"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_race"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={character.race}"
                        android:hint="@string/race"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={character.gender}"
                        android:maxLength="10"
                        android:hint="@string/gender"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    app:suffixText="lbs"
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="@={character.weight}"
                        android:hint="@string/weight"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    app:suffixText="m"
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="@={character.height}"
                        android:hint="@string/height"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_main_hand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={character.mainHand}"
                        android:hint="@string/main_hand"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned"
                        android:maxLength="2"
                        android:text="@={character.tl}"
                        android:hint="@string/tl"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MaterialTextInputView">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/character_edit_sm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned"
                        android:text="@={character.sm}"
                        android:hint="@string/sm"
                        tools:text="Is a long name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/character_edit_id_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/id"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/character_edit_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        tools:text="123" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/character_edit_st_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/st"
                        android:textStyle="bold" />

                    <include layout="@layout/stat_counter" android:id="@+id/character_edit_st_counter"
                        app:stat="@{character.st}"
                        app:onClickPlus="@{onClickPlus}"
                        app:onClickMinus="@{onClickMinus}"/>

                    <TextView
                        android:id="@+id/character_edit_hp_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/hp"
                        android:textStyle="bold" />

                    <include layout="@layout/stat_counter" android:id="@+id/character_edit_hp_counter"
                        app:stat="@{character.hp}"
                        app:onClickPlus="@{onClickPlus}"
                        app:onClickMinus="@{onClickMinus}"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/character_edit_dx_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/dx"
                        android:textStyle="bold" />

                    <include layout="@layout/stat_counter" android:id="@+id/character_edit_dx_counter"
                        app:stat="@{character.dx}"
                        app:onClickPlus="@{onClickPlus}"
                        app:onClickMinus="@{onClickMinus}"/>

                    <TextView
                        android:id="@+id/character_edit_move_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/move"
                        android:textStyle="bold" />

                    <include layout="@layout/stat_counter" android:id="@+id/character_edit_move_counter"
                        app:stat="@{character.move}"
                        app:onClickPlus="@{onClickPlus}"
                        app:onClickMinus="@{onClickMinus}"/>

                    <TextView
                        android:id="@+id/character_edit_speed_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/speed"
                        android:textStyle="bold" />

                    <include layout="@layout/stat_counter" android:id="@+id/character_edit_speed_counter"
                        app:stat="@{character.speed}"
                        app:onClickPlus="@{onClickPlus}"
                        app:onClickMinus="@{onClickMinus}"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/character_edit_iq_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/iq"
                        android:textStyle="bold" />

                    <include layout="@layout/stat_counter" android:id="@+id/character_edit_iq_counter"
                        app:stat="@{character.iq}"
                        app:onClickPlus="@{onClickPlus}"
                        app:onClickMinus="@{onClickMinus}"/>

                    <TextView
                        android:id="@+id/character_edit_will_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/will"
                        android:textStyle="bold" />

                    <include layout="@layout/stat_counter" android:id="@+id/character_edit_will_counter"
                        app:stat="@{character.will}"
                        app:onClickPlus="@{onClickPlus}"
                        app:onClickMinus="@{onClickMinus}"/>

                    <TextView
                        android:id="@+id/character_edit_per_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/per"
                        android:textStyle="bold" />

                    <include layout="@layout/stat_counter" android:id="@+id/character_edit_per_counter"
                        app:stat="@{character.per}"
                        app:onClickPlus="@{onClickPlus}"
                        app:onClickMinus="@{onClickMinus}"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/character_edit_ht_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/ht"
                        android:textStyle="bold" />

                    <include layout="@layout/stat_counter" android:id="@+id/character_edit_ht_counter"
                        app:stat="@{character.ht}"
                        app:onClickPlus="@{onClickPlus}"
                        app:onClickMinus="@{onClickMinus}"/>

                    <TextView
                        android:id="@+id/character_edit_fp_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/fp"
                        android:textStyle="bold" />

                    <include layout="@layout/stat_counter" android:id="@+id/character_edit_fp_counter"
                        app:stat="@{character.fp}"
                        app:onClickPlus="@{onClickPlus}"
                        app:onClickMinus="@{onClickMinus}"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/button_add_skill"
                    android:layout_gravity="end"
                    android:text="Add skill" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    tools:itemCount="5"
                    tools:layoutManager="LinearLayoutManager"
                    tools:listitem="@layout/item_skill"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</layout>

